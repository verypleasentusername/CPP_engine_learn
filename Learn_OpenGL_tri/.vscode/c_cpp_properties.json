{
  "configurations": [
    {
      "name": "windows-gcc-x64",
      "includePath": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/include/ThirdParty/GLFW/**",
        "${workspaceFolder}/include/ThirdParty/glad/glad.h",
        "${workspaceFolder}/include/ThirdParty/glad/**",
        "${workspaceFolder}/src/utils/**",
        "${workspaceFolder}/src/**"
      ],
      "browse": {
        "path": ["${workspaceFolder}/**"],
        "limitSymbolsToIncludedHeaders": true,
        "databaseFilename": ""
      },
      "compilerPath": "E:/mingw64/bin/gcc.exe",
      "cStandard": "${default}",
      "cppStandard": "${default}",
      "intelliSenseMode": "windows-gcc-x64",
      "compilerArgs": ["-c", "clang++ -std=c++17 -Wall -Wextra -pedantic -pthread \"${file}\" && ./a.out"]
    }
  ],
  "version": 4
}